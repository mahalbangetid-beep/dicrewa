# ========================================
# KeWhats Server Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production
PORT=3001

# Database (PostgreSQL for production)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example local: postgresql://postgres:password@localhost:5432/kewhats?schema=public
# Example cloud: postgresql://user:password@your-db-host.com:5432/kewhats?schema=public
DATABASE_URL="postgresql://postgres:%5BD39linkucuy%40%5D@db.zczvcyhbcvpbliawxjbk.supabase.co:5432/postgres?schema=public"

# JWT Configuration (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# API Key Prefix
API_KEY_PREFIX=dk_

# Frontend URL (for CORS) - CHANGE FOR PRODUCTION!
# Development: http://localhost:5173
# Production: https://kewhats.app
FRONTEND_URL=https://kewhats.app

# Redis (Optional - for queue/caching)
REDIS_URL=redis://localhost:6379

# ========================================
# Payment Gateway (Optional)
# ========================================
# Midtrans
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Xendit
XENDIT_SECRET_KEY=your-xendit-secret-key

# ========================================
# AI Services (Optional - for Smart Features)
# ========================================
# Google Gemini
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key

# ========================================
# Proxy Configuration (Optional)
# ========================================
PROXY_ENABLED=false
PROXY_TYPE=http
PROXY_HOST=your-proxy-host.com
PROXY_PORT=3600
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password

# ========================================
# Email Configuration (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@kewhats.app

